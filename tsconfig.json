{
  "compilerOptions": {
    "forceConsistentCasingInFileNames": true,
    "lib": ["dom", "esnext"],
    "module": "esnext",
    "noFallthroughCasesInSwitch": true,
    "noImplicitReturns": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,

    "declaration": true,
    "strict": true,
    "allowJs": true,
    "outDir": "dist",
    "target": "es6",
    "rootDir": "./src",
    "jsx": "react",
    "removeComments": true,
    "importHelpers": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "moduleResolution": "node",
  },
  "include": ["src"],
  "exclude": [
    "node_modules",
    "dist",
    "jest.config.js",
    "jest.config.d.ts",
    "bin",
    "demo",
    "src/*.test.*"
  ]
}
